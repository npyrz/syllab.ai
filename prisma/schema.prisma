generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String    @id @default(cuid())
  username     String    @unique
  email        String    @unique
  name         String?
  passwordHash String?
  provider     String?
  theme        String    @default("dark")
  timezone     String    @default("UTC")
  lastLoginAt  DateTime?
  lastSeenAt   DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  classes      Class[]
  documents    Document[]
  notes        Note[]
  readableNotes ReadableNote[]
  apiUsageDaily ApiUsageDaily[]
}

model Class {
  id          String     @id @default(cuid())
  userId      String
  title       String
  description String?
  currentWeek Int?       // Current week number (1-20)
  currentWeekSetAt DateTime? // Anchor date for Sunday-based week rollover
  scheduleId  String?    // Reference to schedule document
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  documents   Document[]
  notes       Note[]
  readableNotes ReadableNote[]
  weekSchedules WeekSchedule[]
  weekRecommendations WeekRecommendation[]

  @@index([userId])
}

model WeekRecommendation {
  id                  String   @id @default(cuid())
  classId             String
  week                Int
  topicSource         String
  topicSummary        String
  topics              Json
  resources           Json
  generatedAtISO      String
  scheduleFingerprint String
  syllabusFingerprint String
  model               String
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  class               Class    @relation(fields: [classId], references: [id], onDelete: Cascade)

  @@index([classId, week])
  @@unique([classId, week, scheduleFingerprint, syllabusFingerprint])
}

model Note {
  id        String   @id @default(cuid())
  classId   String
  userId    String
  title     String   @default("Untitled note")
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  class     Class    @relation(fields: [classId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([classId])
  @@index([userId, classId])
}

model WeekSchedule {
  id                  String   @id @default(cuid())
  classId             String
  week                Int
  weekStartISO        String
  weekEndISO          String
  days                Json
  upcoming            Json
  generatedAtISO      String
  scheduleFingerprint String
  syllabusFingerprint String
  model               String
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  class               Class    @relation(fields: [classId], references: [id], onDelete: Cascade)

  @@index([classId, week])
  @@unique([classId, week, scheduleFingerprint, syllabusFingerprint])
}

model Document {
  id           String          @id @default(cuid())
  classId      String
  userId       String
  filename     String
  mimeType     String
  sizeBytes    Int
  storageKey   String?
  status       DocumentStatus  @default(pending)
  textExtracted String?
  docType      DocumentType    @default(other)
  weeklyInfo   String?
  scheduleCache String?         // Cached weekly schedule data (JSON ScheduleEntry[])
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt
  processedAt  DateTime?
  user         User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  class        Class           @relation(fields: [classId], references: [id], onDelete: Cascade)
  readableNotes ReadableNote[]

  @@index([userId])
  @@index([classId])
  @@index([status])
}

model ReadableNote {
  id               String             @id @default(cuid())
  classId           String
  userId            String
  sourceDocumentId  String
  sourceFilename    String
  title             String
  content           String?
  status            ReadableNoteStatus @default(processing)
  errorMessage      String?
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  processedAt       DateTime?
  user              User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  class             Class              @relation(fields: [classId], references: [id], onDelete: Cascade)
  sourceDocument    Document           @relation(fields: [sourceDocumentId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([classId])
  @@index([sourceDocumentId])
  @@index([status])
  @@unique([sourceDocumentId])
}

model ApiUsageDaily {
  id           String   @id @default(cuid())
  userId       String
  windowStart  DateTime
  requestCount Int      @default(0)
  tokenCount   Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, windowStart])
  @@index([userId])
  @@index([windowStart])
}

model ApiUsageGlobalDaily {
  id           String   @id @default(cuid())
  windowStart  DateTime @unique
  requestCount Int      @default(0)
  tokenCount   Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([windowStart])
}

enum DocumentStatus {
  pending
  processing
  done
  failed
}

enum DocumentType {
  syllabus
  schedule
  lecture_notes
  other
}

enum ReadableNoteStatus {
  processing
  done
  failed
}
